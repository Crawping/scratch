<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <UI Id="smtpauthform_UI">
      <Dialog Id="smtpauthform" X="50" Y="50" Width="375" Height="270" Title="[ProductName] Setup" CustomPalette="yes">
        <Control Id="Next" Type="PushButton" X="244" Y="244" Width="56" Height="17" Text="&amp;Next &gt;" TabSkip="no" Default="yes">
          <Publish Event="NewDialog" Value="Single_Feature_Destination">1</Publish>
        </Control>
        <Control Id="Previous" Type="PushButton" X="189" Y="244" Width="56" Height="17" Text="&lt; &amp;Back" TabSkip="no">
          <Publish Event="NewDialog" Value="fmmessageform">ONLINE=1</Publish>
          <Publish Event="NewDialog" Value="fmserverdetails">ONLINE=0</Publish>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="309" Y="244" Width="56" Height="17" Text="Cancel" TabSkip="no" Cancel="yes">
          <Publish Event="SpawnDialog" Value="Cancel">1</Publish>
        </Control>
        
        <Control Id="CheckBox1" Type="CheckBox" X="55" Y="100" Width="200" Height="14" Text="Use SSL" TabSkip="no" Property="USESSL" CheckBoxValue="1"/>
        <Control Id="CheckBox2" Type="CheckBox" X="55" Y="120" Width="200" Height="14" Text="Use SMTP Authentication" TabSkip="no" Property="USESMTPAUTH" CheckBoxValue="1"/>
        
        <Control Id="Edit" Type="Edit" X="125" Y="145" Width="118" Height="17" Property="SMTPACCOUNT" TabSkip="no">
          <Condition Action="disable"><![CDATA[USESMTPAUTH<>"1"]]></Condition>
          <Condition Action="enable">USESMTPAUTH="1"</Condition>
        </Control>
        <Control Id="Edit2521" Type="Edit" X="125" Y="163" Width="118" Height="17" Property="SMTPPASSWORD" TabSkip="no" Password="yes">
          <Condition Action="disable"><![CDATA[USESMTPAUTH<>"1"]]></Condition>
          <Condition Action="enable">USESMTPAUTH="1"</Condition>
        </Control>
        
        <Control Id="CheckBox" Type="CheckBox" X="68" Y="181" Width="277" Height="18" Text="Logon using Secure Password Authentication" TabSkip="no" Property="SECUREPASS" CheckBoxValue="1">
          <Condition Action="disable"><![CDATA[USESMTPAUTH<>"1"]]></Condition>
          <Condition Action="enable">USESMTPAUTH="1"</Condition>
        </Control>
        
        <Control Id="Text" Type="Text" X="43" Y="147" Width="78" Height="13" Text="Account:" TabSkip="yes" RightAligned="yes" />
        <Control Id="CustomText" Type="Text" X="40" Y="58" Width="276" Height="38" Text="Select the SMTP authentication properties for [ProductName]. If using SMTP authentication, you must provide an account and password." TabSkip="yes" />
        <Control Id="Line7" Type="Line" X="94" Y="234" Width="281" Height="1" TabSkip="yes" Disabled="yes" />
        <Control Id="Text19" Type="Text" X="23" Y="23" Width="302" Height="14" Text="Select SMTP authentication properties for [ProductName]." TabSkip="yes" Transparent="yes" />
        <Control Id="Line17" Type="Line" X="0" Y="44" Width="375" Height="1" TabSkip="yes" Disabled="yes" />
        <Control Id="Bitmap23" Type="Bitmap" X="0" Y="0" Width="375" Height="44" Text="top16" TabSkip="yes" Disabled="yes" />
        <Control Id="Text18" Type="Text" X="8" Y="8" Width="280" Height="13" Text="[DIALOG_TITLE_FONT_DEFAULT]SMTP authentication." TabSkip="yes" Transparent="yes" />
        <Control Id="Text20" Type="Text" X="2" Y="230" Width="92" Height="12" Text="[GFITM]&#xD;&#xA;" TabSkip="yes" />
        <Control Id="Text2520" Type="Text" X="43" Y="165" Width="78" Height="12" Text="Password:&#xD;&#xA;" TabSkip="yes" RightAligned="yes" />
      </Dialog>
    </UI>
	</Fragment>
</Wix>